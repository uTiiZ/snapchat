<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_weight="0"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/my_stories"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_stories"
                    android:padding="2dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="0"
                android:layout_width="20dp"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center">
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_search"/>
            </RelativeLayout>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/label_friends"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Friends"
                    android:gravity="center|left"
                    android:textColor="#FFFFFF"
                    android:padding="5dp"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:alpha="0"/>

                <TextView
                    android:id="@+id/label_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Search"
                    android:gravity="center|left"
                    android:textColor="#FFFFFF"
                    android:padding="5dp"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/label_discover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Discover"
                    android:gravity="center|left"
                    android:textColor="#FFFFFF"
                    android:padding="5dp"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:alpha="0"/>
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/action_bar_icons"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <RelativeLayout
                android:id="@+id/new_chat"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="right"
                android:gravity="center"
                android:padding="12dp"
                android:alpha="0">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_new_chat"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="right"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/night_mode"
                    android:layout_weight="0"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center"
                    android:padding="15dp">
                    <View
                        android:id="@+id/night_mode_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_night_mode_off"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/flash"
                    android:layout_weight="0"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center"
                    android:padding="13dp">
                    <View
                        android:id="@+id/flash_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_flash_off"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/camera"
                    android:layout_weight="0"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center"
                    android:padding="11dp">
                    <View
                        android:id="@+id/camera_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_face_camera"/>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_icon_friends"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="20dp"
                android:padding="3dp">
                <View
                    android:id="@+id/icon_friends"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_friend"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_icon_camera"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="5dp"
                    android:layout_gravity="bottom|center">
                    <View
                        android:id="@+id/icon_camera"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_button_camera"/>
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/fl_memories"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">
                    <RelativeLayout
                        android:id="@+id/rl_icon_memories"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <View
                            android:id="@+id/icon_memories"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_memories"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/last_memory"
                            android:layout_width="10.8dp"
                            android:layout_height="19.6dp"
                            android:rotation="-352.57"
                            android:layout_marginLeft="18.7dp"
                            android:layout_marginTop="7.8dp"/>
                    </RelativeLayout>
                </FrameLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_icon_discover"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="20dp"
                android:padding="3dp">
                <View
                    android:id="@+id/icon_discover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_discover"/>
            </RelativeLayout>

        </LinearLayout>


    </FrameLayout>

</android.support.constraint.ConstraintLayout>